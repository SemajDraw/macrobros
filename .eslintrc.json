{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "react-app",
    "prettier",
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "plugins": [
    "react",
    "prettier"
  ],
  "rules": {
    "react/prop-types": 0,
    "prettier/prettier": [
      "error",
      {
        "printWidth": 80,
        "tabWidth": 1,
        "useTabs": true,
        "semi": true,
        "singleQuote": true,
        "quoteProps": "preserve",
        "jsxSingleQuote": true,
        "trailingComma": "none",
        "bracketSpacing": true,
        "jsxBracketSameLine": false,
        "arrowParens": "always"
      }
    ]
  }
}
